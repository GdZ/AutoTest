<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pl_use_volume_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/button_play"
                    android:layout_width="0sp"
                    android:layout_height="@dimen/button_heigth"
                    android:layout_weight="0.5"
                    android:onClick="onButtonClick"
                    android:text="@string/play_or_resume"
                    android:textSize="@dimen/button_font_size" />

                <Button
                    android:id="@+id/button_stop"
                    android:layout_width="0sp"
                    android:layout_height="@dimen/button_heigth"
                    android:layout_weight="0.5"
                    android:onClick="onButtonClick"
                    android:text="@string/stop"
                    android:textSize="@dimen/button_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_heigth"
                    android:gravity="center"
                    android:text="@string/start_time"
                    android:textSize="@dimen/text_font_size" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_heigth"
                    android:gravity="center"
                    android:text="@string/time_start_init"
                    android:textSize="@dimen/time_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_heigth"
                    android:gravity="center"
                    android:text="@string/running_time"
                    android:textSize="@dimen/text_font_size" />

                <TextView
                    android:id="@+id/tv_running_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_heigth"
                    android:gravity="center"
                    android:text="@string/time_running_init"
                    android:textSize="@dimen/time_font_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>